<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sinii"
    tools:context=".details_dog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="26px"
        android:paddingHorizontal="20px"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back"
            android:onClick="goBack"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/baseline_arrow_back_24"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dogName"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Golden Retriever"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageStar"
                android:layout_gravity="center"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_weight="1"
                android:onClick="toggle"
                android:tint="@color/gray"
                app:srcCompat="@android:drawable/btn_star" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/dogImage"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        app:srcCompat="@drawable/dog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="23dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="energy:"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/dogEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:layout_marginRight="62dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="playfulness:"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/dogPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="weight:"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/dogWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="16"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="23dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="shedding:"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/dogShedding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="grooming:"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/dogGrooming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="height:"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/dogHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="16"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:padding="12dp"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:text="🐾🌟 Introducing the paw-fect furry companion! Are you ready to welcome boundless joy into your life? Look no further than our adorable doggie! 🐶 With their wagging tail, they'll fill your days with endless smiles and snuggles. From playful romps in the park to lazy Sunday cuddles, they're always up for an adventure or a cozy nap. 🌳🐾 Their loyal heart and gentle spirit make them the ultimate companion for families, couples, and solo adventurers alike. Plus, they're great with kids and other pets! 🏡💕 Don't let another moment pass without this furry bundle of love by your side! 🐾❤️"
        android:layout_height="wrap_content">
    </TextView>
    <Button
        android:id="@+id/dogButton"
        android:layout_width="170dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:text="Reserve Now"
        android:layout_marginVertical="14dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
</LinearLayout>